import tkinter as tk
from time import strftime

def actualizar_reloj():
    tiempo_actual = strftime('%H:%M:%S')
    etiqueta_reloj.config(text=tiempo_actual)
    etiqueta_reloj.after(1000, actualizar_reloj)

# Configuración de la ventana principal
ventana = tk.Tk()
ventana.title("Reloj Digital")

# Etiqueta para mostrar la hora
etiqueta_reloj = tk.Label(ventana, font=('calibri', 40, 'bold'), background='black', foreground='white')
etiqueta_reloj.pack(anchor='center')

# Llamar a la función para actualizar el reloj
actualizar_reloj()

# Ejecutar el bucle principal de la interfaz gráfica
ventana.mainloop()