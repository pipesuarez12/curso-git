def mostrar_triangulo_rectangulo_altura(altura):
    for i in range(1, altura + 1):
        print('* ' * i)

def main():
    try:
        # Solicitar al usuario que ingrese un número entero
        num_entero = int(input("Ingrese un número entero para la altura del triángulo: "))

        # Mostrar el triángulo rectángulo
        mostrar_triangulo_rectangulo_altura(num_entero)

    except ValueError:
        print("Por favor, ingrese un número entero válido.")

if __name__ == "__main__":
    main()